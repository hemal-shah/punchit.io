<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor = "@color/primary_light"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <io.punch_it.punchit.RoundedImageView
                android:id="@+id/roundedImageView_home"
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:layout_height="70dp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_home"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:text="@string/randomText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_dark"
                />
            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time_home"
                android:layout_gravity="center"
                android:text="@string/time"
                android:textSize="20sp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_question_home"
            android:text="@string/randomText"
            android:gravity="start|center"
            android:background="@android:color/darker_gray"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <LinearLayout
                android:id="@+id/ll_post1"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:background="@mipmap/ic_launcher"
                android:layout_height="fill_parent">

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="250dp" />

                <TextView
                    android:id="@+id/tv_first_post"
                    android:background="@android:color/holo_blue_dark"
                    android:text="@string/randomText"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_post2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:background="@mipmap/ic_launcher"
                android:layout_height="fill_parent">


                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="250dp" />

                <TextView
                    android:id="@+id/tv_second_post"
                    android:background="@android:color/holo_blue_dark"
                    android:text="@string/randomText"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_user_id"
                android:text="@string/randomText"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/primary_dark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/tv_comment"
                android:textColor="@android:color/white"
                android:text="@string/randomText"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"

                />

        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_width="fill_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_weight="1"
                android:src="@mipmap/share"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                />

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_weight="1"
                android:src="@mipmap/comment"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                />

            <ImageView
                android:id="@+id/iv_spam"
                android:layout_weight="1"
                android:src="@mipmap/spam"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
